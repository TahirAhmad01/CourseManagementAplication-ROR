.accordion-body
  - if result[:enrolled_courses].any?
    table.table.table-bordered
      thead
        tr

    th[scope="col"]
      | #
    th[scope="col"]
      | Course List
    th[scope="col"]
      | Credit
    th[scope="col"]
      | Mark
    th[scope="col"]
      | Grade
    tbody
      - total_mark = 0
      - result[:enrolled_courses].each_with_index do |enrolled_course, index|
        - grade = calculate_grade(enrolled_course.marks)
        - total_mark += enrolled_course.marks.to_i if enrolled_course.marks.present?
        tr

        th[scope="row"]
          = index + 1
        td
          = enrolled_course.course.course_name
        td
          = enrolled_course.course.credit
        td
          - if enrolled_course.marks.nil?
            span.text-muted
              | Mark pending
          - else
            = enrolled_course.marks
        td
          - if enrolled_course.marks.nil?
            span.text-muted
              | Mark pending
          - elsif grade == 0
            span.text-danger
              | Failed
          - else
            = grade
            |  (
            = grade_alpha(grade)
            | ) 
      tr
        td.text-end[colspan="2"]
          | Total Mark
        td.text-center[colspan="2"]
          = total_mark
        td
          | CGPA: 
          - if result[:cgpa] == nil
            |  Pending result 
          - else
            = "%.2f" % result[:cgpa]
            |  ( 
            = grade_alpha(result[:cgpa])
            |  ) 
  - else
    p.text-center.text-danger.py-3
      | You are not enrolled in any courses for this semester.
