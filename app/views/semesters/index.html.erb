<p style="color: green"><%= notice %></p>

<h1>Semesters</h1>

<div id="semesters">
  <% if @semesters.length < 1 %>
    No semester has been found yet.
  <% end %>
  <% @semesters.each do |semester| %>
    <%= render semester %>
    <p>
      <%= link_to "Show this semester", semester %>
    </p>
  <% end %>
</div>

<%= link_to "New semester", new_semester_path %>
