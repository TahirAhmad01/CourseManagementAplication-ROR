<h2>Students List</h2>

<% @students.each do |student| %>
  <%= link_to students_list_path(student) do %>
    <div class="d-flex align-items-center gap-3 mb-3 bg-light shadow-sm rounded-2 px-3 py-3">
      <div class="profile-pic">
        <img src="https://source.unsplash.com/250x250?girl" alt="Profile Picture">
      </div>
      <div>
        <div class="text-capitalize"><%= student.first_name + " " + student.last_name %></div>
      </div>
    </div>
  <% end %>
<% end %>